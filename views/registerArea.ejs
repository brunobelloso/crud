<!-- views/registerArea.ejs -->
<!DOCTYPE html>
<html lang="en">

<%- include('Head.ejs', { ...registerAreaMetadata }) %>

<body>
    <%- include('navbar.ejs', { user: user }) %>
    <div class="container mt-5">
        <div class="text-center"><h2>Area Registration Form</h2></div>
        <form class="mx-auto w-50 mt-5" action="/register-area" method="post">
            <div class="form-group">
                <label for="areaName">Area Name:</label>
                <input type="text" class="form-control" id="areaName" name="areaName" required>
            </div>
            <div class="form-group">
                <label for="description">Description:</label>
                <textarea class="form-control" id="description" name="description" rows="4"></textarea>
            </div>
            <div class="form-group text-center">
                <button type="submit" class="btn btn-primary btn-lg">Register Area</button>
            </div>
        </form>
    </div>
    <%- include('Scripts.ejs') %>
</body>

</html>
